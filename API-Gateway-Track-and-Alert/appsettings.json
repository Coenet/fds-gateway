{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Routes": [
    {
      "UpstreamPathTemplate": "/articles/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post" ],
      "DownstreamPathTemplate": "/articles/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "article-service",
          "Port": 80
        }
      ],
      "LoadBalancerOptions": {
        "Type": "RoundRobin"
      }//,
      //"RouteClaimsRequirement": {
      //  "Role": "User"
      //}
    },
    {
      "UpstreamPathTemplate": "/wikis/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post" ],
      "DownstreamPathTemplate": "/api/wikis/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "wiki-service",
          "Port": 80
        }
      ],
      "LoadBalancerOptions": {
        "Type": "RoundRobin"
      }//,
      //"RouteClaimsRequirement": {
      //  "Role": "User"
      //}
    },
    {
      "UpstreamPathTemplate": "/notification/{everything}",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "notification-service",
          "Port": 80
        }
      ],
      "LoadBalancerOptions": {
        "Type": "RoundRobin"
      },
      "RouteClaimsRequirement": {
        "Role": "User"
      }
    },
    {
      "UpstreamPathTemplate": "/auth/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post" ],
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "auth-service",
          "Port": 80
        }
      ],
      "LoadBalancerOptions": {
        "Type": "RoundRobin"
      }
    }
  ],
  "GlobalConfiguration": {
    "ServiceDiscoveryProvider": {
      //"Host": "145.220.75.43",
      "Port": 443,
      //"Token": "txpc696iUhbVoudg164r93CxDTrKRVWG",
      "Namespace": "default",
      "Type": "KubernetesServiceDiscoveryProvider"
    }
  }
}
